<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_log"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginpor"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_iniciar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="128dp"
                android:layout_marginTop="44dp"
                android:text="@string/login"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/ed_usr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="86dp"
                android:layout_marginTop="44dp"
                android:backgroundTint="#D50000"
                android:ems="10"
                android:hint="@string/usr"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#8FFF0000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/ed_psw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="86dp"
                android:layout_marginTop="32dp"
                android:backgroundTint="#D50000"
                android:ems="10"
                android:hint="@string/ped"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textColorHint="#8FFF0000"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="254dp"
                android:layout_height="69dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="68dp"
                android:background="#00FF0000"
                android:onClick="log"
                android:scrollbarStyle="insideInset"
                android:scrollbarTrackHorizontal="@drawable/inicio"
                android:scrollbarTrackVertical="@drawable/inicio"
                app:srcCompat="@drawable/inicio" />

            <TextView
                android:id="@+id/tv2asd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="64dp"
                android:elevation="5dp"
                android:text="@string/reg"
                android:textColor="#FFFFFF"
                android:textColorHint="#00AF0000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/butR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#E00707"
                android:onClick="reg_btn"
                android:text="@string/reg2"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#E00707"
                android:onClick="sinse"
                android:text="@string/adminb"
                android:textColor="#FFFFFF"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>